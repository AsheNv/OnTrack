<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">




    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"

        android:layout_height="match_parent" >


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:shrinkColumns="1"


            android:padding="15dp" >

            <TableRow
                android:layout_height="wrap_content"

                android:layout_width="wrap_content" >
                <TextView
                    android:id="@+id/result_table_details_arr_at_start_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="From"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/dFrom"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="from"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout2"
                    android:layout_margin="1dp"

                    android:gravity="center_vertical" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >
                <TextView
                    android:id="@+id/result_table_details_depart_from_start_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="To"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/dTo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="to"
                    android:textColor="#D8731F"
                    android:padding="15dp"
                    android:background="@drawable/table_layout2"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >
                <TextView
                    android:id="@+id/result_table_details_reach_dest_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Arrival Time"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/dArrival"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Arrival Time"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout2"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >
                <TextView
                    android:id="@+id/result_table_details_freq_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Frequency"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/dFreq"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="frq"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout2"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center_vertical" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >
                <TextView
                    android:id="@+id/result_table_details_dur_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Duration"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/dDuration"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="2.5 HRS"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout2"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >
                <TextView
                    android:id="@+id/result_table_details_final_dest_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Delay Chance"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/dPred"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Delay Chance"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout2"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center_vertical" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >
                <TextView
                    android:id="@+id/result_table_details_train_type_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Train Type"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/dType"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="traintype"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout2"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >
                <TextView
                    android:id="@+id/result_table_Delay"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Current Delay"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/dDelay"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Information Unavailable"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout2"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >
                <TextView
                    android:id="@+id/result_table_Avg"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Estimated Time Arrival"
                    android:textSize="5pt"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/dEta"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Information Unavailable"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:background="@drawable/table_layout2"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical" />
            </TableRow>



        </TableLayout>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/ic_google_maps_white_36dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify Me."
            android:id="@+id/switch1"
            android:layout_gravity="left|bottom"
            android:checked="false" />

    </FrameLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp"
        android:background="#d6d6d6"/>


</android.support.v4.widget.DrawerLayout>















